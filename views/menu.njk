{% extends "base.njk" %}
{% block content %}
<div style="text-align: center;">
  <img src="imgs/logo.png" alt="Logo">
</div>
<h1>Menu</h1>
<ul>
  {% for categoria in menu %}
  <li>
    <h2>
      {{ categoria.nombre }}
    </h2>
    <ul>
      {% for plato in categoria.platos %}
      <li>
        {{ plato.nombre }} - $
        {{ plato.precio }}
      </li>
      {% endfor %}
    </ul>
  </li>
  {% endfor %}
</ul>
{% endblock %}